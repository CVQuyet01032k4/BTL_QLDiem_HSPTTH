<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BTL_QLDiem_HSPTTH.AdminVM"
             x:Class="BTL_QLDiem_HSPTTH.Views.AdminV.QuanlyGiaovien"
             x:Name="page"
             Title="Quản lý giáo viên"
             BackgroundColor="#F2F6FF">

    <ContentPage.BindingContext>
        <vm:QuanlyGiaovien />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Form thêm giáo viên -->
            <Border Padding="20" 
                    BackgroundColor="White" 
                    StrokeShape="RoundRectangle 15"
                    StrokeThickness="0">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Thêm giáo viên mới" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#0A66FF"/>

                    <Entry Placeholder="Họ tên giáo viên"
                           Text="{Binding Hoten}"
                           HeightRequest="45"
                           PlaceholderColor="#999"/>

                    <Picker Title="Môn dạy"
                            ItemsSource="{Binding DanhsachMon}"
                            ItemDisplayBinding="{Binding Tenmh}"
                            SelectedItem="{Binding MonSelected}"
                            HeightRequest="45"/>

                    <Button Text="Thêm giáo viên"
                            BackgroundColor="#0A66FF"
                            TextColor="White"
                            HeightRequest="45"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            Command="{Binding AddCommand}" />
                </VerticalStackLayout>
            </Border>

            <!-- Search -->
            <SearchBar Placeholder="Tìm kiếm giáo viên..."
                       Text="{Binding SearchText}"
                       BackgroundColor="White"
                       CancelButtonColor="#0A66FF"/>

            <!-- Danh sách -->
            <Label Text="Danh sách giáo viên" 
                   FontSize="16" 
                   FontAttributes="Bold"
                   Margin="0,10,0,5"/>

            <CollectionView ItemsSource="{Binding DanhsachGV_Filter}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Xóa"
                                               BackgroundColor="#FF3B30"
                                               Command="{Binding BindingContext.DeleteCommand, Source={x:Reference page}}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border Padding="15" 
                                    Margin="0,5" 
                                    BackgroundColor="White" 
                                    StrokeShape="RoundRectangle 12"
                                    StrokeThickness="0">
                                <HorizontalStackLayout Spacing="15">
                                    <Border BackgroundColor="#FF9500"
                                            WidthRequest="45"
                                            HeightRequest="45"
                                            StrokeThickness="0"
                                            StrokeShape="RoundRectangle 22.5"
                                            HorizontalOptions="Start">
                                        <Label Text="{Binding Hoten}"
                                               TextColor="White"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               TextTransform="Uppercase"
                                               MaxLines="1"
                                               CharacterSpacing="0.5"/>
                                    </Border>
                                    <VerticalStackLayout VerticalOptions="Center" Spacing="5">
                                        <Label Text="{Binding Hoten}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="#333"/>
                                        <Label Text="{Binding MonhocId, StringFormat='Môn ID: {0}'}" 
                                               FontSize="14" 
                                               TextColor="#666"/>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
