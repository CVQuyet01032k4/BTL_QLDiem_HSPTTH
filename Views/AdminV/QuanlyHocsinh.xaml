<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BTL_QLDiem_HSPTTH.AdminVM"
             x:Class="BTL_QLDiem_HSPTTH.Views.AdminV.QuanlyHocsinh"
             x:Name="page"
             Title="Quản lý học sinh"
             BackgroundColor="#F2F6FF">

    <ContentPage.BindingContext>
        <vm:QuanlyHocsinh />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Form thêm học sinh -->
            <Border Padding="20" 
                    BackgroundColor="White" 
                    StrokeShape="RoundRectangle 15"
                    StrokeThickness="0">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Thêm học sinh mới" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#0A66FF"/>

                    <Entry Placeholder="Họ tên học sinh"
                           Text="{Binding Hoten}"
                           HeightRequest="45"
                           PlaceholderColor="#999"/>

                    <HorizontalStackLayout Spacing="10">
                        <Picker Title="Giới tính"
                                SelectedItem="{Binding Gioitinh}"
                                HeightRequest="45"
                                HorizontalOptions="FillAndExpand">
                            <Picker.Items>
                                <x:String>Nam</x:String>
                                <x:String>Nữ</x:String>
                            </Picker.Items>
                        </Picker>

                        <Picker Title="Lớp"
                                ItemsSource="{Binding DanhsachLop}"
                                SelectedItem="{Binding LopSelected}"
                                ItemDisplayBinding="{Binding Tenlop}"
                                HeightRequest="45"
                                HorizontalOptions="FillAndExpand" />
                    </HorizontalStackLayout>

                    <DatePicker Date="{Binding Ngaysinh}"
                                Format="dd/MM/yyyy"
                                TextColor="#333"/>

                    <Button Text="Thêm học sinh"
                            BackgroundColor="#0A66FF"
                            TextColor="White"
                            HeightRequest="45"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            Command="{Binding AddCommand}" />
                </VerticalStackLayout>
            </Border>

            <!-- Search -->
            <SearchBar Placeholder="Tìm kiếm học sinh..."
                       Text="{Binding SearchText}"
                       BackgroundColor="White"
                       CancelButtonColor="#0A66FF"/>

            <!-- Danh sách -->
            <Label Text="Danh sách học sinh" 
                   FontSize="16" 
                   FontAttributes="Bold"
                   Margin="0,10,0,5"/>

            <CollectionView ItemsSource="{Binding DanhsachHS_Filter}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Xóa"
                                               BackgroundColor="#FF3B30"
                                               Command="{Binding BindingContext.DeleteCommand, Source={x:Reference page}}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border Padding="15" 
                                    Margin="0,5" 
                                    BackgroundColor="White" 
                                    StrokeShape="RoundRectangle 12"
                                    StrokeThickness="0">
                                <HorizontalStackLayout Spacing="15">
                                    <Border BackgroundColor="#0A66FF"
                                            WidthRequest="45"
                                            HeightRequest="45"
                                            StrokeThickness="0"
                                            StrokeShape="RoundRectangle 22.5"
                                            HorizontalOptions="Start">
                                        <Label Text="{Binding Hoten, StringFormat='{0:0}'}"
                                               TextColor="White"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                    <VerticalStackLayout VerticalOptions="Center" Spacing="5">
                                        <Label Text="{Binding Hoten}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="#333"/>
                                        <Label Text="{Binding Gioitinh, StringFormat='Giới tính: {0}'}" 
                                               FontSize="14" 
                                               TextColor="#666"/>
                                        <Label Text="{Binding Ngaysinh, StringFormat='Ngày sinh: {0:dd/MM/yyyy}'}" 
                                               FontSize="13" 
                                               TextColor="#888"/>
                                        <Label Text="{Binding Mahocsinh, StringFormat='Mã HS: {0}'}" 
                                               FontSize="12" 
                                               TextColor="#999"/>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
