<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BTL_QLDiem_HSPTTH.Views.AdminV.AdminDashboard"
             BackgroundColor="#F2F6FF">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Header -->
            <HorizontalStackLayout Spacing="12">
                <Border BackgroundColor="#0A66FF"
                        WidthRequest="48" HeightRequest="48"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 24">
                    <Label x:Name="Avatar"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="18"
                           FontAttributes="Bold"/>
                </Border>
                <VerticalStackLayout VerticalOptions="Center">
                    <Label x:Name="TenUser"
                           FontSize="15"
                           TextColor="#0A66FF"
                           FontAttributes="Bold"/>
                    <Label x:Name="VaiTro"
                           FontSize="13"
                           TextColor="#555"/>
                </VerticalStackLayout>

                <Button Text="&#xE5CD;"
                        FontFamily="MaterialSymbolsRounded"
                        FontSize="26"
                        BackgroundColor="Transparent"
                        TextColor="Red"
                        HorizontalOptions="EndAndExpand"
                        Clicked="Logout_Clicked"/>
            </HorizontalStackLayout>

            <!-- TILES -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="15" RowSpacing="15">

                <!-- Quản lý lớp -->
                <Border Grid.Row="0" Grid.Column="0"
                        Padding="20"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 15">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Border BackgroundColor="#7A3FFF"
                                WidthRequest="50"
                                HeightRequest="50"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 25">
                            <Label Text="&#xE8AF;" 
                                   FontFamily="MaterialSymbolsRounded" 
                                   FontSize="28"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Quản lý lớp" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Go_QuanlyLop"/>
                    </Border.GestureRecognizers>
                </Border>

                <!-- Quản lý môn -->
                <Border Grid.Row="0" Grid.Column="1"
                        Padding="20"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 15">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Border BackgroundColor="#34C759"
                                WidthRequest="50"
                                HeightRequest="50"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 25">
                            <Label Text="&#xE865;" 
                                   FontFamily="MaterialSymbolsRounded" 
                                   FontSize="28"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Quản lý môn" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Go_QuanlyMon"/>
                    </Border.GestureRecognizers>
                </Border>

                <!-- Quản lý giáo viên -->
                <Border Grid.Row="1" Grid.Column="0"
                        Padding="20"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 15">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Border BackgroundColor="#FF9500"
                                WidthRequest="50"
                                HeightRequest="50"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 25">
                            <Label Text="&#xE7EF;" 
                                   FontFamily="MaterialSymbolsRounded" 
                                   FontSize="28"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Quản lý giáo viên" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Go_QuanlyGiaovien"/>
                    </Border.GestureRecognizers>
                </Border>

                <!-- Học sinh -->
                <Border Grid.Row="1" Grid.Column="1"
                        Padding="20"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 15">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Border BackgroundColor="#0A66FF"
                                WidthRequest="50"
                                HeightRequest="50"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 25">
                            <Label Text="&#xE7ED;" 
                                   FontFamily="MaterialSymbolsRounded" 
                                   FontSize="28"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Quản lý học sinh" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Go_QuanlyHocsinh"/>
                    </Border.GestureRecognizers>
                </Border>

                <!-- Phân công -->
                <Border Grid.Row="2" Grid.Column="0"
                        Padding="20"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 15">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Border BackgroundColor="#5856D6"
                                WidthRequest="50"
                                HeightRequest="50"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 25">
                            <Label Text="&#xE872;" 
                                   FontFamily="MaterialSymbolsRounded" 
                                   FontSize="28"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Phân công" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Go_Phancong"/>
                    </Border.GestureRecognizers>
                </Border>

                <!-- Báo cáo -->
                <Border Grid.Row="2" Grid.Column="1"
                        Padding="20"
                        BackgroundColor="White"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 15">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Border BackgroundColor="#FF2D55"
                                WidthRequest="50"
                                HeightRequest="50"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 25">
                            <Label Text="&#xE8B8;" 
                                   FontFamily="MaterialSymbolsRounded" 
                                   FontSize="28"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Báo cáo" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Go_Baocao"/>
                    </Border.GestureRecognizers>
                </Border>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
